<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_background"
    app:strokeColor="@color/card_stroke"
    app:strokeWidth="0.5dp"
    app:contentPadding="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Encabezado con estado y balance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <!-- Estado con chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_status"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACTIVA"
                app:chipBackgroundColor="@color/green_active_light"
                app:chipStrokeColor="@color/green_active"
                app:chipStrokeWidth="1dp"
                app:chipCornerRadius="8dp"
                android:textColor="@color/green_active"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                android:textStyle="bold"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <!-- Balance -->
            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$250.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:drawablePadding="4dp"
                android:drawableTint="?attr/colorPrimary"/>
        </LinearLayout>

        <!-- Código/Número con icono -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_credit_card"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tv_card_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GC-1234-5678-9012"
                android:textSize="18sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:textColor="?attr/colorOnSurface"/>
        </LinearLayout>

        <!-- Detalles en 2 columnas -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginBottom="16dp"
            android:alignmentMode="alignMargins">

            <!-- Fila 1 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recipient_label"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_column="0"
                android:layout_row="0"/>

            <TextView
                android:id="@+id/tv_recipient"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="cliente@email.com"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_row="0"
                android:layout_marginStart="8dp"/>

            <!-- Fila 2 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expires_label"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_expiry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="12/12/2025"
                android:textSize="14sp"
                android:layout_row="1"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"/>
        </GridLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutline"
            android:layout_marginBottom="12dp"/>

        <!-- Acciones con MaterialButton -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:divider="@drawable/divider_vertical"
            android:showDividers="middle">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/view_action"
                android:textColor="?attr/colorPrimary"
                app:icon="@drawable/ic_eye"
                app:iconGravity="textStart"
                app:iconTint="?attr/colorPrimary"
                app:iconPadding="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/edit_action"
                app:icon="@drawable/ic_edit"
                app:iconGravity="textStart"
                app:iconPadding="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_deactivate"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/deactivate_action"
                android:textColor="@color/red_error"
                app:iconGravity="textStart"
                app:iconTint="@color/red_error"
                app:iconPadding="4dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>