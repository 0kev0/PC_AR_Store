<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:strokeColor="@color/card_stroke"
    app:strokeWidth="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Fila superior: C贸digo y Estado -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- C贸digo de descuento -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tv_discount_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimaryDark"
                android:letterSpacing="0.05"/>

            <!-- Estado -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:chipBackgroundColor="@color/green"
                app:chipStrokeColor="@color/green_dark"/>
        </LinearLayout>

        <!-- Informaci贸n del descuento -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textSize="14sp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_min_purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textSize="14sp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_expiry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textSize="14sp"/>

        <!-- Botones de acci贸n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp"
                android:text="Editar"
                android:textAllCaps="true"
                android:textSize="12sp"
                app:icon="@drawable/ic_edit"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                app:iconPadding="2dp"
                app:strokeColor="?attr/colorPrimary"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_deactivate"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Desactivar"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textColor="@color/red"
                app:icon="@drawable/ic_restricted"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                app:iconPadding="2dp"
                app:strokeColor="@color/red"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>