<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="180dp"
    android:layout_margin="16dp"
    android:layout_gravity="center"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/card_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gift_card_gradient"
        android:padding="16dp">

        <!-- Logo o tipo de tarjeta -->
        <ImageView
            android:id="@+id/ivCardType"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_credit_card" />

        <!-- Nombre de la tarjeta -->
        <TextView
            android:id="@+id/tvGiftCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="GIFT CARD"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Valor -->

        <TextView
            android:id="@+id/tvGiftCardPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="35dp"
            android:text="$100"
            android:textColor="@android:color/white"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCardNumber"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnBuy"
            android:text="•••• •••• •••• 1234"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <!-- Botón de compra -->
        <Button
            android:id="@+id/btnBuy"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/gray_very_light"
            android:elevation="4dp"
            android:text="COMPRAR"
            android:textAllCaps="false"
            android:textColor="@android:color/holo_green_light" />

    </RelativeLayout>
    </androidx.cardview.widget.CardView>